/* pages/menu/menu.wxss */
page {
  height: 100%;
}

.section {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: rgba(127, 255, 212, 0.432);
  align-items: center;
  justify-content: center;
}

.function {
  display: flex;
  height: 5%;
  text-align: center;
  align-items: center;
  justify-content: center;
  border-radius: 4px;
  margin: 4px;
  color:#fff ;
  background-color: #fac;
  box-shadow: 4px 1px 1px #cccccc;
  flex-direction: column;
}

.big {
  width: 80%;
}

.small {
  width: 60%;
}

.display {
  display: block;
}

.nondisplay {
  display: none;
}

