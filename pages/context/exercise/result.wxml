<!--pages/context/U1/S1/exercise/result.wxml-->
<view class='bigBox'>
  <icon wx:if="{{!wrongFlag}}" size="{{70}}" color='#ffaacc' icon type='success' />
  <icon wx:if="{{wrongFlag}}" size="{{70}}" color='#ffaacc' icon type='{{correctNumber==0?"cancel":"warn"}}' />

  <view class='slogen'>正确率：{{correctNumber}}/{{totalNumber}}</view>
  <view class='smallslogen'>{{correctNumber==0?"小老弟你怎么回事…":(percentage==100?"全都对了，学霸！":(percentage>60?"还算不错呢":"得继续加吧劲呢"))}}</view>
  <block wx:if="{{wrongFlag}}">
    <view class='folderbox'>
      <button class='folder' bindtap='unfold'>点击查看错误题目{{foldState?"▷":"▽"}}</button>
      <scroll-view hidden='{{foldState}}' scroll-y='true' style='height: {{totalNumber - correctNumber >= 8 ? 8 * 45 : (totalNumber - correctNumber) * 45}}px'>
        <block wx:for='{{wrongExercise}}' wx:for-item='i' wx:key=''>
          <text class='wrongExercises'>{{i.question}}</text>
        </block>
      </scroll-view>
    </view>
  </block>
  <!-- <button bindtap='gotoRecog' data-mode='{{0}}'>再来一次</button> -->
  <block wx:if="{{wrongFlag}}">
    <button bindtap='gotoRecog' data-mode='{{1}}'>错误再刷</button>
  </block>
  <button bindtap='gotoMenu'>返回主菜单</button>

</view>