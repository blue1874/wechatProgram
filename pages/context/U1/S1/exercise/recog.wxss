color: #fac;
}

.bi{
justify-content: center; 
display: flex;
align-items: center;
text-align: center;
flex-direction: column;
margin-top: 10%;
margin-bottom: 5%;
}

input{
width:300rpx;
height:50rpx;
border-style:solid; 
border-width: 2rpx;
border-color: #fac;
border-radius: 10rpx;
color:#fac;
justify-content: center; 
align-items: center;
text-align: center;
}

.inputblank{
  display:block;
  margin-bottom:10%; 
  justify-content: center; 
  align-items: center;
  text-align: center;
}
.be{
  justify-content: center; 
  display: flex;
  align-items: center;
  text-align: center;
  flex-direction: column;
  margin-top: 20%;
  margin-bottom: 5%;
}

button{
  width: 300rpx;
  margin-top:80rpx; 
  border-style: solid;
  border-width:2rpx; 
  color: #fac;
  box-shadow: 4px 1px 1px #cccccc;
}

.function{
  margin-top: 80rpx;
  width:300rpx;
  justify-content: center; 
  align-items: center;
  text-align: center;
  color:#fff ;
  background-color: #fac;
  box-shadow: 4px 1px 1px #cccccc;
}

.question {
  border: 2px solid pink;
  margin-top: 10%;
  margin-bottom: 10%;
  font-size: 75rpx;
  color: #fac;
  font-family: monospace;
}
.options {
  width: 100%;
  height: 15%;
  text-align: left;
  margin-top: 5%;
  margin-bottom: 10%;
  font-size: 70rpx;
  color: #fac;
  font-family: monospace;
}

.highlight {
  border: 2px solid pink;
}