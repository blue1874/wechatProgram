/* pages/context/theFirstUnit/theFirstUnit.wxss */
page {
  height: 100%;
}

.tab {
  position: fixed;
  top: 0;
  z-index: 1000;
  width: 50%;
  text-align: center;
  padding: 10rpx 0;
  height: 30px;
  background-color: white;
}

#word {
  left: 0;
}

#exercise{
  left: 50%;
}

.topTabSwiper {
  border-top: 1px solid rgba(255, 0, 0, 0.349);
  border-bottom: 1px solid rgba(255, 0, 0, 0.349);
  zoom: 1;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  border-bottom: 1px solid rgba(255, 0, 0, 0.349);
  color: rgba(255, 0, 0, 0.397);
}

.words {
  display: flex;
  text-align: left;
  padding: 4px;
  background-color: white;
  border-bottom: 1px solid rgba(255, 0, 0, 0.521);
  box-shadow: none;
}

.highlight {
  background-color: pink;
}

.swiper {
  position: absolute;
  top: 30px;
  width: 100%;
  height: 100%;
}

.center-item {
  display: flex;
  text-align: center;
  align-items: center;
  margin: 5px;
}

button {
  text-align: center;
  background-color: rgba(127, 255, 212, 0.514);
  color: rgba(238, 47, 13, 0.459);
  box-shadow: 4px 1px 1px #cccccc;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

button.j-center {
  position: absolute;
  top: 40%;
  left: 30%;
}

text.j-center {
  position: absolute;
  top: 35%;
  left: 27%;
}
