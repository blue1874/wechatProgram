/* pages/context/theFirstUnit/theFirstUnit.wxss */
.tab {
  float: left;
  width: 50%;
  text-align: center;
  padding: 10rpx 0;
  height: 30px;
}
.topTabSwiper {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  zoom: 1;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  border-bottom: 1px solid #f00;
  color: #f00;
}
 
.swiper {
  width: 100%;
}
 
.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 80rpx 0;
}

button {
  display: block;
  text-align: center;
  background-color: aquamarine;
  position: fixed; 
  bottom: 0px;
  width: 50%;
  color: rgba(238, 47, 13, 0.863);
}
#left {
  left: 0px;
}
#right {
  right: 0px;
}