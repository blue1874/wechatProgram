/* pages/menu/menu.wxss */
page {
  height: 100%;
}

.section {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: rgba(127, 255, 212, 0.432);
  align-items: center;
  justify-content: center;
}

.function {
  display: flex;
  height: 15%;
  text-align: center;
  align-items: center;
  justify-content: center;
  border-radius: 4px;
  margin: 4px;
  color:#fff ;
  background-color: #fac;
  flex-direction: column;
}

.grey {
  background-color: gray;
}
.big {
  width: 80%;
}

.small {
  width: 60%;
}

.box {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 40%;
}
